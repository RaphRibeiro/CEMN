<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NivelDoisActivity"
    android:background="@drawable/quadronegro">

    <!-- PLACAR -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PONTUAÇÃO:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="45dp" />

    <!-- CAMPO DE RESPOSTA -->

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="700dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/somatorio"
        android:layout_width="900dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="530dp"
        android:inputType="text"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

    <!-- BOTÃO DA RESPSOTA -->


    <!-- OPERAÇÕES MATEMÁTICAS -->
    <!-- + - X e / -->

    <Button
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="78dp"
        android:layout_marginBottom="423dp"
        android:background="@drawable/fundo_botao_dois"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

    <Button
        android:id="@+id/mais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="311dp"
        android:layout_marginBottom="309dp"
        android:background="@drawable/fundo_botao_oval"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

    <!-- ( )  e NÚMEROS  ESCOLHIDOS -->

    <Button
        android:id="@+id/menos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="308dp"
        android:layout_marginBottom="219dp"
        android:background="@drawable/fundo_botao_oval"
        android:text="-"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

    <Button
        android:id="@+id/multiplicacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="183dp"
        android:layout_marginBottom="313dp"
        android:background="@drawable/fundo_botao_oval"
        android:text="X"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

    <Button
        android:id="@+id/divisao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="178dp"
        android:layout_marginBottom="219dp"
        android:background="@drawable/fundo_botao_oval"
        android:text="/"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

    <Button
        android:id="@+id/parentese_abre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="310dp"
        android:background="@drawable/fundo_botao_oval"
        android:text="("
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

    <Button
        android:id="@+id/parentese_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="59dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/fundo_botao_oval"
        android:text=")"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

    <Button
        android:id="@+id/primeiro_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="308dp"
        android:layout_marginBottom="123dp"
        android:background="@drawable/fundo_botao_oval"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

    <Button
        android:id="@+id/segundo_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="176dp"
        android:layout_marginBottom="123dp"
        android:background="@drawable/fundo_botao_oval"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

    <Button
        android:id="@+id/terceiro_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="123dp"
        android:background="@drawable/fundo_botao_oval"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

    <Button
        android:id="@+id/limpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="68dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/fundo_botao_dois"
        android:text="Limpar"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

</RelativeLayout>